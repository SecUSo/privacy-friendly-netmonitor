<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activities.ReportActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/report_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="AppIcon"
            android:src="@mipmap/icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/report_detail_text_package" />

        <TextView
            android:id="@+id/report_detail_text_package"
            android:layout_width="279dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toEndOf="@id/report_detail_icon"
            android:gravity="center_vertical"
            android:text="App Name and Vendor"
            android:textSize="16sp" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        android:text="@string/report_detail_heading"/>

    <ListView
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:id="@+id/report_detail_list_view"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black" />

</LinearLayout>


