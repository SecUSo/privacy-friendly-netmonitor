<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MainActivity"
    tools:showIn="@layout/activity_main_app_bar"
    android:orientation="vertical"
    style="@style/AlertDialog.AppCompat">

    <TextView
        android:id="@+id/main_text_normalbutton_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/main_text_normalbutton_desc"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/main_image_startstopp"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_monitor_off"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/main_text_startstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_stopped"
        android:layout_below="@+id/main_image_startstopp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
